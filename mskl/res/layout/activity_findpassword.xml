<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/title" />

  
    <EditText
        android:id="@+id/et_username"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_common"
        android:drawableLeft="@drawable/icon_phone"
        android:hint="请输入手机号"
        android:padding="10dp"
        android:textColor="@color/color_gray"
        android:textColorHint="@color/color_gray"
        android:textSize="14dp" />

    <FrameLayout
       android:layout_width="280dp"
            android:layout_height="40dp"
        android:layout_gravity="center"
         android:layout_marginTop="20dp"
         >

        <EditText
            android:id="@+id/et_validate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:background="@drawable/bg_white_common"
            android:drawableLeft="@drawable/icon_security_code"
            android:hint="请输入验证码"
            android:padding="10dp"
            android:textColor="@color/color_gray"
            android:textColorHint="@color/color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_get"
            android:layout_width="75dp"
            android:layout_height="match_parent"
          android:layout_gravity="right"
          android:gravity="center"
            android:text="点击获取"
            android:textColor="@color/color_white"
            android:background="@color/color_orange" />
    </FrameLayout>


    <EditText
        android:id="@+id/et_password"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_common"
        android:drawableLeft="@drawable/icon_password"
        android:hint="请设置密码，6-12位"
        android:padding="10dp"
        android:textColor="@color/color_gray"
        android:textColorHint="@color/color_gray"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/et_invite"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_common"
        android:drawableLeft="@drawable/icon_invite_code"
        android:hint="邀请码，选填"
        android:padding="10dp"
        android:textColor="@color/color_gray"
        android:textColorHint="@color/color_gray"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_orange"
        android:text="提交"
        android:textColor="@color/color_white" />

    

</LinearLayout>